@{
    ViewData["Title"] = "Credit Note";
}



<div id="printbody">
    <style>
        *, html, body {
            background-color: #fff;
            font-family: "FontA11", FontB21, SaxMono,Consolas;
            font-size: 16px;
            color: #999;
        }

        .font-store {
            font-size: 20px;
        }

        .items {
            font-size: 15px;
        }

        hr.style {
            border-top: 1px dotted #8c8b8b;
            margin-top: 2px;
            margin-bottom: 2px;
        }

        hr.style-mt {
            border-top: 1px dotted #8c8b8b;
            margin-top: 2px;
        }

        hr.style-mb {
            border-top: 1px dotted #8c8b8b;
            margin-bottom: 2px;
        }



        /*for header*/
        .header {
            margin-left: -10px;
        }


        /*for item table */
        .col-sm-sn {
            max-width: 5%;
            flex: 0 0 5%;
            padding-left: 15px;
            display: none;
        }

        .col-sm-particulars {
            padding-left: 15px;
            max-width: 15%;
            flex: 0 0 15%;
        }

        .col-sm-qty {
            max-width: 6%;
            flex: 0 0 6%;
        }

        .col-sm-rate {
            max-width: 9%;
            flex: 0 0 9%;
        }

        .col-sm-promo-disc {
            max-width: 9%;
            flex: 0 0 9%;
        }

        .col-sm-total {
            max-width: 9%;
            flex: 0 0 9%;
        }

        .total-quantity {
            margin-top: -15px;
            margin-bottom: -6px;
        }

        .display-none {
            display: none;
        }
    </style>


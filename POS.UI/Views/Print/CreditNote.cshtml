                <div class="col-sm-2">
                    Ref No. #
                </div>
                <div class="col-sm-7">
                    : {billRefNumber}
                </div>
            </div>

            <div class="row pb-1">
                <div class="col-sm-2">
                    Date
                </div>
                <div class="col-sm-9">
                    : {dateBS} ({dateAD})
                </div>
            </div>
            <div class="row pb-1 {customerhide}">
                <div class="col-sm-2">

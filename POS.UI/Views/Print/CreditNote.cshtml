        <div class="row">
            <div class="col-sm-6">
                <div class="make-center font-store">
                    {companyName}
                </div>
                <div class="make-center">
                    {storeLocation}
                </div>
                <div class="make-center">
                    VAT No: {vatNumber}
                </div>
                <div class="make-center">
                    {invoiceType}
                </div>
                <div class="make-center">
                    {copyName}
                </div>
            </div>
        </div>
    </center>
    <div class="clearfix"><br /></div>



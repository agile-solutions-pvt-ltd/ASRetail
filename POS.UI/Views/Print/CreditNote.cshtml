            </div>

        </div>
    </div>

    @* Item Table *@
    <div class="row">
        <div class="col-sm-11">
            <div class="row pb-1 item-header">
                <div class="sn col-sm-sn">
                    Sn
                </div>
                <div class="col-sm-particulars">
                    Particulars
                </div>
                <div class="col-sm-qty text-right">
                    Qty
                </div>
                <div class="col-sm-rate text-right">
                    Rate
                </div>
                <div class="col-sm-promo-disc text-right">
                    P.Dis
                </div>
                <div class="col-sm-total text-right">
                    Amount
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-6">
                    <hr class="style-mt" />
                </div>
            </div>
        </div>
        <div class="col-sm-11" id="items">
            <div class="row pb-1 items">
                <div class="col-sm-sn">
                    {ItemSN}
                </div>
                <div class="col-sm-particulars">
                    {ItemName}
                </div>
                <div class="col-sm-qty text-right">
                    {ItemQuantity}
                </div>
                <div class="col-sm-rate text-right">
                    {ItemRate}
                </div>
                <div class="col-sm-promo-disc text-right">
                    {ItemPromoDiscount}
                </div>
                <div class="col-sm-total text-right">
                    {ItemTotal}
                </div>
            </div>

        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-6">
                    <hr class="style-mt" />
                </div>
            </div>
        </div>
    </div>


    @* Total Calculation *@
    <div class="row">
        <div class="col-sm-11">
            <div class="row items total-quantity">
                <div class="col-sm-sn"></div>
                <div class="col-sm-particulars"></div>
                <div class="col-sm-qty text-right">
                    {totalQuantity}
                </div>
                <div class="col-sm-rate text-right"></div>
                <div class="col-sm-promo-disc text-right"></div>
                <div class="col-sm-total text-right"></div>
            </div>




            <div class="row pb-1">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Total
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {totalGrossAmount}
                </div>
            </div>
            <div class="row pb-1">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Promo Disc.
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {promoDiscount}
                </div>
            </div>
            <div class="row pb-1">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Loyalty Disc.
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {loyaltyDiscount}
                </div>
            </div>
            <div class="row pb-1">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Taxable
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {totalTaxableAmount}
                </div>
            </div>
            <div class="row pb-1">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; NonTaxable
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {totalNonTaxableAmount}
                </div>
            </div>
            <div class="row pb-1">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Vat 13%
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {totalVat}
                </div>
            </div>
            <div class="row pb-1">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Net Amount
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {totalNetAmount}
                </div>
            </div>
            <div class="row pb-1 sr-only">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <hr class="style" />
                </div>
            </div>
            <div class="row pb-1 sr-only">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Tender
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {tenderAmount}
                </div>
            </div>
            <div class="row pb-1 sr-only">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    &nbsp; Change
                    <span class="pull-right">:</span>
                </div>
                <div class="col-sm-2 text-right">
                    {changeAmount}
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-6">
                    <hr class="style-mt" />
                </div>
            </div>
        </div>
    </div>

    @* Footer *@
    <div class="row">
        <div class="col-sm-11">
            <div class="row pb-1">
                <div class="col-sm-6 text-justify">
                    Welcome to great shopping experience.
                    Goods exchange within 7 days with original bill.
                    contact: 01-5550422,23
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-6">
                    <hr class="style" />
                </div>
            </div>
        </div>
    </div>
    <div class="row pb-1">
        <div class="col-sm-11">
            <div class="row pb-1">
                <div class="col-sm-2">
                    Counter
                </div>
                <div class="col-sm-5">
                    : {terminalName} ({transTime})
                </div>
            </div>
            <div class="row pb-1">
                <div class="col-sm-2">
                    Cashier
                </div>
                <div class="col-sm-5">
                    : {cashierName}
                </div>
            </div>
        </div>
    </div>

</div>

